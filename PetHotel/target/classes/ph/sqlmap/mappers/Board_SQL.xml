<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ph.sqlmap.mappers.Board_SQL">
	<resultMap type="board" id="boardResult">
		<result property="boardNo" column="boardNo" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="boardType" column="boardType" />
		<result property="wdate" column="wdate" />
		<result property="memberId" column="memberId" />
	</resultMap>
	
	<insert id="insertBoard">
		insert into board (title,content,boardType,wdate) values(
		#{title},#{content},#{boardType},now())
	</insert>
	
	<select id="selectBoard" resultMap="boardResult">
		select * from board where boardNo=#{boardNo}
	</select>
	
	<select id="boardList" resultMap="boardResult">
		select * from board
	</select>
</mapper>